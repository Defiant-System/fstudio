<ToolBar>
	<Group width="17%">
		<Options>
			<Tool symbol="icon-undo" state="disabled"/>
			<Tool symbol="icon-redo" state="disabled"/>
		</Options>
	</Group>
	<Group width="62%">
		<Options>
			<Tool symbol="icon-move" state="disabled" click="select-design-tool" arg="move"/>
			<Tool symbol="icon-pan" state="disabled" click="select-design-tool" arg="pan"/>
			<Tool symbol="icon-pen" state="disabled" click="select-design-tool" arg="pen"/>
		</Options>
		<Options>
			<Tool symbol="icon-path-add" state="disabled" click="select-design-tool" arg="anchor-add"/>
			<Tool symbol="icon-new-rectangle" state="disabled" click="select-design-tool" arg="path-rectangle"/>
			<Tool symbol="icon-new-oval" state="disabled" click="select-design-tool" arg="path-oval"/>
			<Tool symbol="icon-new-path" state="disabled" click="select-design-tool" arg="path-add"/>
		</Options>
		<Options>
			<Tool symbol="icon-filled" state="disabled" click="set-design-mode" arg="preview"/>
			<Tool symbol="icon-outline" state="disabled" click="set-design-mode" arg="outline"/>
		</Options>
	</Group>
	<Group width="21%">
		<Tool symbol="icon-sidebar" click="toggle-sidebar" state="disabled"/>
	</Group>
</ToolBar>