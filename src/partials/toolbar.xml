<ToolBar>
	<Group width="17%">
		<Options>
			<Tool symbol="icon-undo" state="disabled"/>
			<Tool symbol="icon-redo" state="disabled"/>
		</Options>
	</Group>
	<Group width="62%">
		<Options>
			<Tool symbol="icon-move" click="select-design-tool" arg="move" state="active"/>
			<Tool symbol="icon-pan" click="select-design-tool" arg="pan"/>
			<Tool symbol="icon-pen" click="select-design-tool" arg="pen"/>
		</Options>
		<Options>
			<Tool symbol="icon-path-add" click="select-design-tool" arg="anchor-add"/>
			<Tool symbol="icon-new-rectangle" click="select-design-tool" arg="path-rectangle"/>
			<Tool symbol="icon-new-oval" click="select-design-tool" arg="path-oval"/>
			<Tool symbol="icon-new-path" click="select-design-tool" arg="path-add"/>
		</Options>
		<Options>
			<Tool symbol="icon-filled" click="set-design-mode" arg="preview"/>
			<Tool symbol="icon-outline" click="set-design-mode" arg="outline" state="active"/>
		</Options>
	</Group>
	<Group width="21%">
		<Tool symbol="icon-sidebar" click="toggle-sidebar" state="disabled"/>
	</Group>
</ToolBar>